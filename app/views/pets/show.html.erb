<div class="container">
  <h1><%= @pet.name %></h1>
  <p><%= @pet.address %></p>
  <p><%= @pet.species %></p>
  <p><%= @pet.found_on %></p>

  <%= link_to "edit pet", edit_pet_path(@pet)  %>

  <%= link_to "back to list", pets_path  %>

  <%= link_to "delete pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure ?"} %>
</div>

